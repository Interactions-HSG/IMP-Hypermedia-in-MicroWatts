@prefix td: <https://www.w3.org/2019/wot/td#> .
@prefix htv: <https://www.w3.org/2009/http#> .
@prefix hctl: <https://www.w3.org/2019/wot/hypermedia#> .
@prefix js: <https://www.w3.org/2019/wot/json-schema#> .


<#artifact> a td:Thing;
    td:hasActionAffordance [ a td:ActionAffordance;
      td:name "postSensorData";
      td:hasForm [
          htv:methodName "POST";
          hctl:hasTarget <coap://datalake:5685/data>;
          hctl:forContentType "application/json";
          hctl:hasOperationType td:invokeAction
        ]
    ], [ a td:ActionAffordance;
        td:name "getSensorData";
        td:hasForm [
            htv:methodName "GET";
            hctl:hasTarget <http://datalake:7600/data>;
            hctl:forContentType "application/json";
            hctl:hasOperationType td:invokeAction
        ];
        td:hasInputSchema [
            a js:ObjectSchema;
            js:properties [
                a js:NumberSchema;
                js:propertyName "sensorId"
            ];
        ];
    ], [ a td:ActionAffordance;
        td:name "getTemperature";
        td:hasForm [
            htv:methodName "GET" ;
            hctl:hasTarget <http://datalake:7600/temperature> ;
            hctl:hasOperationType td:invokeAction
        ];
    ], [ a td:ActionAffordance;
        td:name "getHumidity";
        td:hasForm [
            htv:methodName "GET" ;
            hctl:hasTarget <http://datalake:7600/humidity> ;
            hctl:hasOperationType td:invokeAction
        ] ;
    ] ;
.